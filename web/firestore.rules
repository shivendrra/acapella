rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth.uid == userId; }
    function isAdmin() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'master_admin']; }
    function isMasterAdmin() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'master_admin'; }
    function isProfileComplete() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.profileComplete == true; }
    
    // --- New Helper for Liking ---
    function isLikingOrUnliking() {
      let changedKeys = request.resource.data.diff(resource.data).affectedKeys();
      return changedKeys.hasOnly(['likes', 'likesCount']);
    }

    // --- USER PROFILES ---
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isMasterAdmin();
      allow delete: if isOwner(userId);
    }

    // --- FOLLOWS ---
    match /follows/{followId} {
        allow read: if isSignedIn();
        allow create, delete: if isSignedIn() && request.auth.uid == followId.split('_')[0];
    }
    
    // --- PLAYLISTS (NEW ADDITION) ---
    match /playlists/{playlistId} {
      // Allow everyone to read playlists
      allow read: if true;
      
      // Allow creation if signed in, profile is complete, and userId matches the auth uid
      allow create: if isSignedIn() && isProfileComplete() && request.resource.data.userId == request.auth.uid;
      
      // Allow updates and deletion only if the user owns the playlist
      allow update, delete: if isSignedIn() && isProfileComplete() && resource.data.userId == request.auth.uid;
    }
    
    // --- LIKES (for songs, albums, reviews) ---
    match /likes/{likeId} {
        allow read: if true;
        allow create, delete: if isSignedIn() && isProfileComplete() && request.auth.uid == likeId.split('_')[0];
    }

    // --- MUSIC CONTENT (Artists, Albums, Songs) ---
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /albums/{albumId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /songs/{songId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- COLLECTION GROUP for REVIEWS ---
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && isProfileComplete();
      // Allow owner to edit content, and any signed-in user to like/unlike.
      allow update: if isSignedIn() && isProfileComplete() && (isOwner(resource.data.userId) || isLikingOrUnliking());
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    // --- ADMIN APPLICATIONS ---
    match /adminApplications/{applicationId} {
      allow read: if isMasterAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isMasterAdmin();
    }
  }
}